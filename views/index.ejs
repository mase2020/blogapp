<%- include("partials/header") %>

<div class="ui container">
<h1>welcome to the blog page</h1>

<% blogs.forEach(function(blog){ %>

    <h4><%= blog.title %></h4>
    <div>
    <img src="<%= blog.image %>">
</div>
<p><%= blog.created %></p>
<div><%= blog.body.substring(0,100) %>...</div>
<a href="/blogs/<%=blog._id%>">More info</a>


<% })%>
</div>
<%- include("partials/footer") %>